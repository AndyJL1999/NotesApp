<UserControl x:Class="NotesApp.MVVM.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.MVVM.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="{Binding Title}" Margin="15" VerticalAlignment="Center"
                   FontSize="18" FontWeight="Bold"/>
        <TextBlock Text="{Binding UpdatedTime}" Margin="15" VerticalAlignment="Center"
                   FontSize="12" Foreground="DodgerBlue"/>
    </StackPanel>
</UserControl>
